<Window x:Class="Ch13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ch13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Slider x:Name="mySlider" Minimum="50" Maximum="300" 
                ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Value, StringFormat=n0}" />
        <Rectangle Height="{Binding ElementName=mySlider, Path=Value}"
                   Width="250"
                   Fill="Black" />
        <TextBlock Text="{Binding ElementName=mySlider,Path=Value,StringFormat=c}" />
        <TextBox Text="{Binding MyTextValue, UpdateSourceTrigger=PropertyChanged}" />
        <Button Click="btnClick" Content="Click me" />
        <TextBlock Text="{Binding MyDateValue,StringFormat=d}" />
    </StackPanel>
</Window>
